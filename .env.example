# RAG Chatboard Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED: Cohere API (Embeddings)
# =============================================================================
# Get your API key from: https://dashboard.cohere.com/api-keys
COHERE_API_KEY="

# =============================================================================
# REQUIRED: Qdrant Cloud (Vector Database)
# =============================================================================
# Get from: https://cloud.qdrant.io - Create a cluster, then get URL and API key
QDRANT_URL=https://
QDRANT_API_KEY=""
QDRANT_COLLECTION=book_v1

# =============================================================================
# REQUIRED: Google Gemini API (LLM)
# =============================================================================
# Get from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# =============================================================================
# REQUIRED: Admin Authentication
# =============================================================================
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
ADMIN_SECRET=your_admin_secret_here

# =============================================================================
# OPTIONAL: Neon Serverless Postgres (Conversation History)
# =============================================================================
# Get from: https://console.neon.tech - Create a project, then copy connection string
# Format: postgresql://user:password@ep-xxx.region.aws.neon.tech/dbname?sslmode=require
NEON_DB_URL=

# =============================================================================
# Server Configuration
# =============================================================================
# CORS origins (comma-separated for multiple)
CORS_ORIGINS=https://asmamasood.github.io,http://localhost:3000

# Rate limiting
RATE_LIMIT_PER_MINUTE=60

# =============================================================================
# Ingestion Configuration
# =============================================================================
# Path to Docusaurus docs directory (relative to project root)
DOCS_PATH=physical-ai-robotics-book/docs

# Chunking parameters
CHUNK_MIN_TOKENS=200
CHUNK_MAX_TOKENS=800
CHUNK_OVERLAP_SENTENCES=2

# =============================================================================
# Deployment (Cloud Run)
# =============================================================================
# GCP_PROJECT_ID=your-gcp-project-id
# GCP_REGION=us-central1
